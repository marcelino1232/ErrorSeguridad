@model LoginViewModel

@{
    ViewData["Title"] = "Login Usuario";
}

<h1>Login Usuario</h1>




<form asp-action="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="RememberMe"></label>
        <input type="checkbox" asp-for="RememberMe" class="form-check" />
    </div>

    <div class="d-flex">
        <button type="submit" class="btn btn-primary me-2">Enviar</button>
        <a class="btn btn-secondary" asp-action="Registro">Registro Usuario</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}